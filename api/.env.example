# Hafaloha API - Environment Variables
# Copy this file to .env and fill in the values
# Ask Leon for the real API keys

# =============================================================================
# DATABASE (Required)
# =============================================================================
DATABASE_URL=postgresql://localhost/hafaloha_api_development

# =============================================================================
# CORS - Frontend URL (Required)
# =============================================================================
FRONTEND_URL=http://localhost:5173

# =============================================================================
# CLERK - Authentication (Required)
# Get these from Clerk Dashboard: https://dashboard.clerk.com
# =============================================================================
CLERK_SECRET_KEY=sk_test_YOUR_KEY_HERE
CLERK_PUBLISHABLE_KEY=pk_test_YOUR_KEY_HERE

# =============================================================================
# AWS S3 - Image Uploads (Required for product images)
# =============================================================================
AWS_ACCESS_KEY_ID=YOUR_KEY_HERE
AWS_SECRET_ACCESS_KEY=YOUR_SECRET_HERE
AWS_REGION=ap-southeast-2
AWS_S3_BUCKET=hafaloha

# =============================================================================
# STRIPE - Payments (Optional for local dev)
# =============================================================================
STRIPE_SECRET_KEY=sk_test_YOUR_KEY_HERE
STRIPE_PUBLISHABLE_KEY=pk_test_YOUR_KEY_HERE
STRIPE_WEBHOOK_SECRET=whsec_YOUR_SECRET_HERE

# =============================================================================
# EASYPOST - Shipping (Optional for local dev)
# =============================================================================
EASYPOST_API_KEY=EZAK_YOUR_KEY_HERE

# =============================================================================
# RESEND - Email (Optional for local dev)
# =============================================================================
RESEND_API_KEY=re_YOUR_KEY_HERE
